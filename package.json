{
  "name": "notion-discord-bot",
  "version": "1.0.0",
  "description": "Discord bot for bug tracking with Notion integration",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "deploy-commands": "tsx src/deploy-commands.ts",
    "test:notion": "tsx src/tests/test-notion.ts",
    "test:discord": "tsx src/tests/test-discord.ts",
    "test:all": "tsx src/tests/test-notion.ts && tsx src/tests/test-discord.ts",
    "preview": "tsx src/tests/preview-output.ts"
  },
  "keywords": [
    "discord",
    "notion",
    "bug-tracker"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@notionhq/client": "^5.6.0",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
